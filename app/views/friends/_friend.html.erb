<style>
  .custom-table th,
  .custom-table td {
    padding: 0.3rem;
    }
  .custom-table th:first-child {
    width: 10%;}
</style>

<div class="bg-light p-1">
  <table class="table table-bordered custom-table">
    <tbody>
      <tr>
        <th>First name:</th>
        <td><%= friend.first_name %></td>
      </tr>
      <tr>
        <th>Last name:</th>
        <td><%= friend.last_name %></td>
      </tr>
      <tr>
        <th>Email:</th>
        <td><%= friend.email %></td>
      </tr>
      <tr>
        <th>Phone:</th>
        <td><%= friend.phone %></td>
      </tr>
    </tbody>
  </table>
</div>
